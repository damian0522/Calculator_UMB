<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CalcButton">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:background">@color/button_background</item>
        <item name="android:textColor">@color/button_text</item>
        <item name="android:textSize">24sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:elevation">0dp</item>
        <item name="android:backgroundTint">@color/button_border</item>
    </style>

    <style name="OperatorButton" parent="CalcButton">
        <item name="android:background">@color/button_background</item>
        <item name="android:textColor">@color/operator_button</item>
    </style>

    <style name="FunctionButton" parent="CalcButton">
        <item name="android:background">@color/button_background</item>
        <item name="android:textColor">@color/function_button</item>
    </style>

    <style name="EqualsButton" parent="CalcButton">
        <item name="android:background">@color/button_background</item>
        <item name="android:textColor">@color/equals_button</item>
    </style>
</resources>
